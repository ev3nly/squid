<% @page_title = "Lightning | Home" %>
<div class="splash-home">
  <div class="splash-jumbotron">
    <div class="container">
      <h1>We're a social club that organizes<br>weekly sports across your city</h1>

      <div class="sport-icon-container">
        <span class="sport-icon">
          <%= image_tag("sports-icons/basketball-icon-dark-blue.png", alt: "play basketball") %>
        </span>
        <span class="sport-icon">
          <%= image_tag("sports-icons/golf-icon-dark-blue.png", alt: "play golf") %>
        </span>
        <span class="sport-icon">
          <%= image_tag("sports-icons/football-icon-dark-blue.png", alt: "play football") %>
        </span>
        <span class="sport-icon">
          <%= image_tag("sports-icons/bowling-icon-dark-blue.png", alt: "play bowling") %>
        </span>
        <span class="sport-icon">
          <%= image_tag("sports-icons/whiffle-icon-dark-blue.png", alt: "play whiffleball") %>
        </span>
        <span class="sport-icon">
          <%= image_tag("sports-icons/tennis-icon-dark-blue.png", alt: "play tennis") %>
        </span>
        <span class="sport-icon">
          <%= image_tag("sports-icons/ultimate-icon-dark-blue.png", alt: "play ultimate frisbee") %>
        </span>
        <span class="sport-icon">
          <%= image_tag("sports-icons/soccer-icon-dark-blue.png", alt: "play soccer") %>
        </span>
      </div>

      <div class="jumbotron-button">
        <button type="button" class="btn btn-embossed btn-red btn-fb"><i class="icon-facebook-sign"></i>Apply For Membership</button>
      </div>
    </div>
  </div>

  <div class="splash-marketing">
    <div class="container">
      <div class="main-header">
        <h1>Play your favorite sports when you'd like,<br> meet amazing people</h1>
      </div>

      <div class="marketing-bullet">
        <div class="bullet-text">
          <h2>Apply with Facebook</h2>
          <h3>and answer a few questions, so we can make sure you're playing with the right people.</h3>
        </div>
        <div class="bullet-image">
          <button type="button" class="btn btn-embossed btn-red btn-fb"><i class="icon-facebook-sign"></i>Apply For Membership</button>
        </div>
      </div>

      <div class="marketing-bullet">
        <div class="bullet-image">
          <%= image_tag("splash-marketing/marketing-calendar.png", alt: "Calendar") %>
        </div>
        <div class="bullet-text">
          <h2>We personally match you</h2>
          <h3>with players of similar talent and that you don't yet know, but should.</h3>
        </div>
      </div>

      <div class="marketing-bullet">
        <div class="bullet-text">
          <h2>Only pay when you play</h2>
          <h3>We'll email you each week so you can let us know when you're free.</h3>
        </div>
        <div class="bullet-image">
          <%= image_tag("splash-marketing/marketing-match.png", alt: "Match") %>
        </div>
      </div>

      <div class="marketing-bullet last-bullet">
        <div class="bullet-image high-five">
          <%= image_tag("splash-marketing/marketing-high-five-red.png", alt: "High Five") %>
        </div>        
        <div class="bullet-text">
          <h2>Show up and enjoy</h2>
          <h3>We organize everything. You just need to show up and bring your 'A' game.</h3>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: "shared/waitlist_share", locals: { title: "Bring Lightning to your city faster", body: "Tell your friends" } %>
</div>