<div class="sign-up-select-sports">
  <div class="container">

  	<% if @errors and @errors.count > 0 %>
  		<div class="row">
	  		<div class="alert alert-danger col-md-4 col-md-offset-4">
		  		<% @errors.each do |error| %>
		  			<p><%= error %></p>
	  			<% end %>
	  		</div>
  		</div>
  	<% end %>

    <div class="row sign-up-select-sports-instructions">
      <h1>Select the sports you're interested in</h1>
    </div>

    <div class="row sign-up-select-sports-sport-row">
      <div class="col-md-3"></div>
      <%= render partial: "shared/select_sports_sport", locals: { class_name: "basketball", title: "Basketball" } %>

       <%= render partial: "shared/select_sports_sport", locals: { class_name: "football", title: "Touch Football" } %>

       <%= render partial: "shared/select_sports_sport", locals: { class_name: "whiffle", title: "Whiffle Ball" } %>
    </div>

    <div class="row sign-up-select-sports-sport-row">
      <div class="col-md-3"></div>
      <%= render partial: "shared/select_sports_sport", locals: { class_name: "bowling", title: "Bowling" } %>

       <%= render partial: "shared/select_sports_sport", locals: { class_name: "golf", title: "Golf" } %>

       <%= render partial: "shared/select_sports_sport", locals: { class_name: "tennis", title: "Tennis" } %>
    </div>

    <div class="row sign-up-select-sports-sport-row">
      <div class="col-md-3"></div>
       <%= render partial: "shared/select_sports_sport", locals: { class_name: "ultimate", title: "Ultimate Frisbee" } %>

       <%= render partial: "shared/select_sports_sport", locals: { class_name: "soccer", title: "Soccer" } %>

      <div class="col-md-2 sign-up-select-sports-form">
        <textarea class="form-control model-other-sports" placeholder="Add any other sports you'd like to play here (e.g. volleyball, hockey, bocce, etc.)" rows="5"></textarea>
      </div>
    </div>

    <div class="sign-up-select-sports-personal-info">
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 page-header"></div>
      </div>

      <div class="row sign-up-select-sports-personal-info-phone">
        <div class="col-md-2"></div>
        <div class="col-md-3">
          <p class="cellphone">My cellphone number is
        </div>
        <div class="col-md-5">
          <input type="text" class="form-control model-phone"></p>
        </div>
      </div>

      <div class="row sign-up-select-sports-personal-info-location">
        <div class="col-md-2"></div>
        <div class="col-md-3">
          <p class="cellphone">I live in
        </div>
        <div class="col-md-5">
          <input type="text" class="form-control model-location"></p>
        </div>
      </div>
    </div>

    <div class="sign-up-select-sports-continue">

      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 page-header"></div>
      </div>

      <div class="row sign-up-select-sports-continue-button">
      	<%= form_tag("/sign-up", method: "post", class: "select-sports-form") do %>
      		<button type="button" class="btn btn-lg btn-embossed btn-red select-sports-submit" data-loading-text="Submitting...">
            <i class="icon-bolt icon-large"></i>
             Continue
          </button>
    		<% end %>
      </div>

      <div class="row">
        <h4 class="select-sports-count"></h4>
      </div>

    </div>
  </div>
</div>