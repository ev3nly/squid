$( document ).ready ->
	shareLink = window.referralCode || "https://joinlightning.com/"

	$(".share-fb").click (event) ->
		link = "https://www.facebook.com/sharer/sharer.php?u=#{encodeURIComponent(shareLink)}"
		window.open link, "facebook-share-dialog", "width=626,height=436"

	$(".share-twitter").click (event) ->
		tweet = "Join Lightning and have fun activities fully organized for you, just show up and have fun!"
		link = "http://twitter.com/home?status=#{encodeURIComponent("#{tweet} #{shareLink}")}"
		x = screen.width/2 - 550/2
		y = screen.height/2 - 450/2
		window.open(link, "", "width=550, height=450, top=#{y}, left=#{y}")

	$(".share-email").click (event) ->
		body = "Hey!#{escape("\n\n")}
			Join Lightning and have fun activities fully organized for you.
			All you have to do is show up and have fun!#{escape("\n\n")}
			#{shareLink}"

		window.location.href = "mailto:?subject=Join%20Lightning&body=#{body}"
